<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guestFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
            android:id="@+id/viewMain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_guest_frame"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/guestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:clickable="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="@id/viewMain"
            app:layout_constraintBottom_toBottomOf="@id/viewMain"
            app:layout_constraintLeft_toLeftOf="@id/viewMain"
            android:text="Tarcisio batista prates"
            android:padding="15dp"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintTop_toTopOf="@id/viewMain"
            app:layout_constraintRight_toRightOf="@id/viewMain"
            app:layout_constraintBottom_toBottomOf="@id/viewMain"/>
        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="@id/arrow"
            app:layout_constraintTop_toTopOf="@id/viewMain"
            app:layout_constraintBottom_toBottomOf="@id/viewMain"
            android:background="#FF088D1E"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>