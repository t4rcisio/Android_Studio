<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeActivity">

    <View
        android:id="@+id/Recipetopbar"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/recipe_topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintLeft_toLeftOf="@id/Recipetopbar"
        app:layout_constraintTop_toTopOf="@id/Recipetopbar" />

    <TextView
        android:id="@+id/RecipeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Cappuccino"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/Recipetopbar"
        app:layout_constraintLeft_toLeftOf="@id/Recipetopbar"
        app:layout_constraintRight_toRightOf="@id/Recipetopbar"
        app:layout_constraintTop_toTopOf="@id/Recipetopbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Recipetopbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/subpage"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:text="@string/defoutDescription"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/subpage"
                    app:layout_constraintRight_toRightOf="@id/subpage" />

                <TextView
                    android:id="@+id/ingedientsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:text="Ingredients"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/subpage"
                    app:layout_constraintTop_toBottomOf="@id/description" />

                <TextView
                    android:id="@+id/ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/ingredientsData"
                    app:layout_constraintLeft_toLeftOf="@id/subpage"
                    app:layout_constraintTop_toBottomOf="@id/ingedientsTitle" />


                <TextView
                    android:id="@+id/todoRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/test"
                    app:layout_constraintBottom_toBottomOf="@id/subpage"
                    app:layout_constraintLeft_toLeftOf="@id/subpage"
                    app:layout_constraintRight_toRightOf="@id/subpage"
                    app:layout_constraintTop_toBottomOf="@id/ingredients" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaaaaaaaaaa\n\naaaaaaaaaaaaaaaaaaaaaaaaaa"
                    app:layout_constraintLeft_toLeftOf="@id/subpage"
                    app:layout_constraintTop_toBottomOf="@id/todoRecipe" />

        </android.support.constraint.ConstraintLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>